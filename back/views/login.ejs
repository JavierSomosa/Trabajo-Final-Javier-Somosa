<!DOCTYPE html>
<html>
<head>
    <title>Admin - Login</title>
    <link rel="stylesheet" href="/css/loginAdmin.css">
</head>
<body class="admin-login">

    <div class="login-container">

        <h2>Panel Administrador</h2>

        <% if (error) { %>
            <div class="error-box">
                <%= error %>
            </div>
        <% } %>

        <form action="/admin/login" method="POST">

            <div class="form-group">
                <label>Email</label>
                <input type="email" name="email" required>
            </div>

            <div class="form-group">
                <label>Password</label>
                <input type="password" name="password" required>
            </div>

            <button type="submit" class="btn-primary">Ingresar</button>
            <button type="button" class="btn-secondary" onclick="autocompletar()">Acceso rápido</button>

        </form>

        <a href="/index.html" class="salir">← Volver al sitio</a>

    </div>

<script>
function autocompletar() {
    document.querySelector('input[name="email"]').value = "admin@mail.com";
    document.querySelector('input[name="password"]').value = "1234";
}
</script>

</body>
</html>