<h2>Encuestas de Ayuda</h2>

<table border="1">
    <thead>
        <tr>
            <th>ID</th>
            <th>Email</th>
            <th>Opinión</th>
            <th>Puntuación</th>
            <th>Acepta Promos</th>
            <th>Imagen</th>
            <th>Fecha</th>
        </tr>
    </thead>
    <tbody>
        <% encuestas.forEach(encuesta => { %>
            <tr>
                <td><%= encuesta.id %></td>
                <td><%= encuesta.email %></td>
                <td><%= encuesta.opinion %></td>
                <td><%= encuesta.puntuacion %></td>
                <td><%= encuesta.acepta_promos ? "Sí" : "No" %></td>
                <td>
                    <% if (encuesta.imagen) { %>
                        <img src="/uploads/<%= encuesta.imagen %>" width="80">
                    <% } else { %>
                        Sin imagen
                    <% } %>
                </td>
                <td><%= encuesta.createdAt.toLocaleString() %></td>
            </tr>
        <% }) %>
    </tbody>
</table>
