<!DOCTYPE html>
<html>
<head>
    <title>Editar Producto</title>
    <link rel="stylesheet" href="/css/editarProducto.css">
</head>
<body>

<div class="container">

    <h2>Editar Producto</h2>

    <form action="/admin/productos/<%= producto.id %>/editar" 
          method="POST" 
          enctype="multipart/form-data"
          class="form-card">

        <div class="form-group">
            <label>Nombre</label>
            <input type="text" name="nombre" value="<%= producto.nombre %>" required>
        </div>

        <div class="form-group">
            <label>Precio</label>
            <input type="number" step="0.01" name="precio" value="<%= producto.precio %>" required>
        </div>

        <div class="form-group">
            <label>Categoría</label>
            <select name="categoria" required>
                <option value="">Seleccione una categoría</option>
                <option value="Juego" 
                    <%= producto.categoria === "Juego" ? "selected" : "" %>>
                    Juego
                </option>
                <option value="Película" 
                    <%= producto.categoria === "Película" ? "selected" : "" %>>
                    Película
                </option>
            </select>
        </div>

        <div class="form-group">
            <label>Imagen (opcional)</label>
            <input type="file" name="imagen" accept="image/*">
        </div>

        <div class="form-group checkbox">
            <label>
                <input type="checkbox" name="activo" value="true"
                    <%= producto.activo ? "checked" : "" %>>
                Producto activo
            </label>
        </div>

        <div class="buttons">
            <button type="submit" class="btn primary">Guardar cambios</button>
            <a href="/admin/dashboard" class="btn secondary">Cancelar</a>
        </div>

    </form>

</div>

</body>
</html>