<!DOCTYPE html>
<html>
<head>
    <title>Dashboard Admin</title>
    <link rel="stylesheet" href="/css/dashboard.css">
</head>
<body>

<header class="topbar">
    <h1>Panel Administrador</h1>
    <a href="/admin/logout" class="logout">Cerrar sesión</a>
</header>

<section class="actions">
    <a href="/admin/productos/nuevo" class="btn primary">Crear Producto</a>
    <a href="/admin/registros" class="btn">Ver Registros</a>
    <a href="/admin/asistencia" class="btn">Ver Encuestas</a>
</section>

<section class="tabla-container">
    <h2>Lista de Productos</h2>

    <table>
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Precio</th>
                <th>Categoría</th>
                <th>Imagen</th>
                <th>Estado</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            <% productos.forEach(producto => { %>
                <tr>
                    <td><%= producto.nombre %></td>
                    <td>$ <%= producto.precio %></td>
                    <td><%= producto.categoria %></td>
                    <td>
                        <% if (producto.imagen) { %>
                            <img src="/uploads/<%= producto.imagen %>">
                        <% } else { %>
                            Sin imagen
                        <% } %>
                    </td>
                    <td>
                        <% if (producto.activo) { %>
                            <span class="activo">Activo</span>
                        <% } else { %>
                            <span class="inactivo">Inactivo</span>
                        <% } %>
                    </td>
                    <td class="acciones">

                        <a href="/admin/productos/<%= producto.id %>/editar" class="btn small">
                            Editar
                        </a>

                        <% if (producto.activo) { %>
                            <form action="/admin/productos/<%= producto.id %>/eliminar"
                                method="POST"
                                onsubmit="return confirmarEliminacion();">
                                <button class="btn danger small">Desactivar</button>
                            </form>
                        <% } %>

                        <% if (!producto.activo) { %>
                            <form action="/admin/productos/<%= producto.id %>/activar"
                                method="POST"
                                onsubmit="return confirmarActivacion();">
                                <button class="btn success small">Activar</button>
                            </form>
                        <% } %>

                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</section>

<script>
function confirmarEliminacion() {
    return confirm("¿Estás seguro de desactivar este producto?");
}
function confirmarActivacion() {
    return confirm("¿Estás seguro de activar este producto?");
}
</script>

</body>
</html>