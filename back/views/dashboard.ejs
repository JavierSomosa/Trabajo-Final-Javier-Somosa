function confirmarEliminacion() {
    return confirm("Â¿EstÃ¡s seguro de desactivar este producto?");
}

function confirmarActivacion() {
    return confirm("Â¿EstÃ¡s seguro de activar este producto?");
}
</script>

</body>
</html>