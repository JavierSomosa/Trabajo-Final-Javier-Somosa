<!DOCTYPE html>
<html>
<head>
    <title>Dashboard</title>
</head>
<body>

<h2>Bienvenido al Dashboard</h2>
<p>EstÃ¡s logueado.</p>

<a href="/admin/productos/nuevo">
    <button>Crear Producto</button>
</a>

<h2>Lista de Productos</h2>

<table border="1" cellpadding="7">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Precio</th>
            <th>Categoria</th>
            <th>Imagen</th>
            <th>Estado</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        <% productos.forEach(producto => { %>
            <tr>
                <td><%= producto.nombre %></td>
                <td>$ <%= producto.precio %></td>
                <td><%= producto.categoria %></td>
                <td>
                    <% if (producto.imagen) { %>
                        <img src="/uploads/<%= producto.imagen %>" width="80">
                    <% } else { %>
                        Sin imagen
                    <% } %>
                </td>
                <td>
                    <% if (producto.activo) { %>
                        Activo
                    <% } else { %>
                        Inactivo
                    <% } %>
                </td>
                <td>

                    <!-- BOTÃ“N EDITAR -->
                    <a href="/admin/productos/<%= producto.id %>/editar">
                        <button>Editar</button>
                    </a>

                    <!-- SI ESTÃ ACTIVO â†’ BOTÃ“N ELIMINAR -->
                    <% if (producto.activo) { %>
                        <form action="/admin/productos/<%= producto.id %>/eliminar"
                              method="POST"
                              onsubmit="return confirmarEliminacion();"
                              style="display:inline;">
                            <button type="submit">Eliminar</button>
                        </form>
                    <% } %>

                    <!-- SI ESTÃ INACTIVO â†’ BOTÃ“N ACTIVAR -->
                    <% if (!producto.activo) { %>
                        <form action="/admin/productos/<%= producto.id %>/activar"
                              method="POST"
                              onsubmit="return confirmarActivacion();"
                              style="display:inline;">
                            <button type="submit">Activar</button>
                        </form>
                    <% } %>

                </td>
            </tr>
        <% }) %>
    </tbody>
</table>

<footer>
    <a href="/admin/logout">Cerrar sesiÃ³n</a>
</footer>

